<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ngo.teog.hstest">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            android:label="Swift App"
        </activity>
        <activity
            android:name=".UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".QRActivity"
            android:label="Scan QR Code"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".SearchActivity"
            android:label="Search"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".TodoActivity"
            android:label="TODO"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".NewDeviceActivity"
            android:label="Create Device"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DeviceInfoActivity"
            android:label="Device Info"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".NewReportActivity" />
        <activity
            android:name=".AboutActivity"
            android:label="About Swift"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".LoginActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".ReportInfoActivity"></activity>

        <receiver
            android:name=".helpers.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver android:name=".helpers.AlarmReceiver"></receiver>
    </application>

</manifest>